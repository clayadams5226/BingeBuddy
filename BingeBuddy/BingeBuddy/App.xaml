<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BingeBuddy"
             xmlns:helpers="clr-namespace:BingeBuddy.Helpers"
             x:Class="BingeBuddy.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <helpers:AddedButtonTextConverter x:Key="AddedButtonTextConverter" />
            <helpers:AddedButtonColorConverter x:Key="AddedButtonColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>