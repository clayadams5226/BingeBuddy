<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BingeBuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BingeBuddy.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#1A1A1A"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#888888"
    Shell.TabBarTitleColor="White">

    <!-- Global Title with Search Button -->
    <Shell.TitleView>
        <Grid Padding="10,0" BackgroundColor="#1A1A1A" ColumnDefinitions="*,Auto">
            <Label Grid.Column="0"
                   Text="Binge Buddy"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1"
                    Text="🔍"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Clicked="OnSearchClicked"
                    Padding="10,0"/>
        </Grid>
    </Shell.TitleView>

    <TabBar>
        <ShellContent
            Title="Discover"
            ContentTemplate="{DataTemplate local:DiscoverPage}"
            Route="DiscoverPage" />

        <ShellContent
            Title="My Shows"
            ContentTemplate="{DataTemplate local:MyShowsPage}"
            Route="MyShowsPage" />

        <ShellContent
            Title="Watchlist"
            ContentTemplate="{DataTemplate local:WatchlistPage}"
            Route="WatchlistPage" />
    </TabBar>

</Shell>